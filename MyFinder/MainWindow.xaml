<Window x:Class="MyFinder.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyFinder"
        xmlns:c="clr-namespace:MyFinder.Converters"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolVis"/>
        <c:FileSizeConverter x:Key="FileSizeConverter"/>
        
        <!-- Modern Button Style -->
        <Style TargetType="Button">
            <Setter Property="Background" Value="#333"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="Margin" Value="0,5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5">
                             <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#444"/>
                    <Setter Property="Cursor" Value="Hand"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Opacity" Value="0.5"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Sidebar Button Style -->
        <Style x:Key="SidebarBtn" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Padding" Value="15,10"/>
        </Style>

    </Window.Resources>

    <Grid Background="#1E1E1E">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/> <!-- Sidebar -->
            <ColumnDefinition Width="*"/>   <!-- Main Content -->
        </Grid.ColumnDefinitions>
        
        <!-- Sidebar -->
        <Border Background="#252526" BorderBrush="#333" BorderThickness="0,0,1,0">
            <StackPanel Margin="10">
                <TextBlock Text="MY FINDER" Foreground="White" FontSize="20" FontWeight="Bold" Margin="10,10,0,20" Opacity="0.9"/>
                
                <TextBlock Text="ACTIONS" Foreground="#888" FontSize="11" Margin="10,0,0,5" FontWeight="Bold"/>

                <Button Name="BtnScan" Content="📂  Scan Drive" Style="{StaticResource SidebarBtn}" Click="BtnScan_Click"/>
                
                <Button Name="BtnAnalyze" Content="👁  Analyze Video" Style="{StaticResource SidebarBtn}" Click="BtnAnalyze_Click"/>
                <Button Name="BtnTranscribe" Content="📝  Transcribe" Style="{StaticResource SidebarBtn}" Click="BtnTranscribe_Click"/>
                <Button Name="BtnFace" Content="👤  Find Faces" Style="{StaticResource SidebarBtn}" Click="BtnFace_Click"/>
                <Button Name="BtnVoice" Content="🎤  Voice ID" Style="{StaticResource SidebarBtn}" Click="BtnVoice_Click"/>
                <Button Name="BtnTime" Content="📅  Extract Dates" Style="{StaticResource SidebarBtn}" Click="BtnTime_Click"/>
                
                <TextBlock Text="SETTINGS" Foreground="#888" FontSize="11" Margin="10,20,0,5" FontWeight="Bold"/>
                <Button Name="BtnSettings" Content="⚙  Settings" Style="{StaticResource SidebarBtn}" Click="BtnSettings_Click"/>
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/> <!-- Header -->
                <RowDefinition Height="*"/>  <!-- Gallery -->
                <RowDefinition Height="30"/> <!-- Status -->
            </Grid.RowDefinitions>
            
            <!-- Top Bar -->
            <Border Grid.Row="0" Background="#1E1E1E" BorderBrush="#333" BorderThickness="0,0,0,1" Padding="20,0">
                <DockPanel VerticalAlignment="Center">
                    <Button Name="BtnBrowse" Content="..." Width="40" Height="35" DockPanel.Dock="Right" Click="BtnBrowse_Click" Background="#333" Margin="10,0,0,0"/>
                    <TextBox Name="TxtPath" Text="C:\" Height="35" VerticalContentAlignment="Center" Background="#2D2D30" Foreground="White" BorderThickness="0" Padding="10,0" FontSize="14" ToolTip="Enter path or click '...' to browse"/>
                    
                    <StackPanel Orientation="Horizontal" DockPanel.Dock="Left" Margin="0,0,20,0">
                         <ComboBox Name="CboSort" Width="100" Height="25" Margin="0,0,10,0" SelectionChanged="CboSort_SelectionChanged">
                             <ComboBoxItem Content="Sort by Date" IsSelected="True"/>
                             <ComboBoxItem Content="Sort by Size"/>
                         </ComboBox>
                         
                         <Button Name="BtnViewToggle" Content="List View" Width="80" Height="25" Click="BtnViewToggle_Click"/>
                    </StackPanel>
                </DockPanel>
            </Border>

            <!-- Gallery -->
            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/> <!-- Recent Files -->
                    <RowDefinition Height="*"/>    <!-- All Files -->
                </Grid.RowDefinitions>
                
                <Expander Header="Recent Files" IsExpanded="True" Foreground="White" Background="#252526" BorderBrush="#333" Margin="10,0">
                    <ListBox Name="LstRecent" Height="120" ScrollViewer.HorizontalScrollBarVisibility="Auto" Background="Transparent" BorderThickness="0" Foreground="White">
                         <ListBox.ItemsPanel>
                             <ItemsPanelTemplate>
                                 <StackPanel Orientation="Horizontal"/>
                             </ItemsPanelTemplate>
                         </ListBox.ItemsPanel>
                         <!-- Reuse Card Template logic via style or duplicate for speed -->
                         <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Margin="5" Background="#2D2D30" CornerRadius="5" Width="100" Height="100" ToolTip="{Binding FileName}">
                                    <Border.InputBindings>
                                        <MouseBinding Gesture="LeftDoubleClick" Command="{Binding DataContext.PlayCommand, RelativeSource={RelativeSource AncestorType=Window}}" CommandParameter="{Binding FilePath}"/>
                                    </Border.InputBindings>
                                    <StackPanel VerticalAlignment="Center">
                                        <TextBlock Text="📄" HorizontalAlignment="Center" FontSize="30" Opacity="0.5"/>
                                        <TextBlock Text="{Binding FileName}" Foreground="White" Margin="5" TextWrapping="Wrap" TextAlignment="Center" FontSize="11"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                         </ListBox.ItemTemplate>
                    </ListBox>
                </Expander>

                <ScrollViewer Grid.Row="1" Margin="10" VerticalScrollBarVisibility="Auto">
                    <ListBox Name="LstFiles" ScrollViewer.HorizontalScrollBarVisibility="Disabled" Background="Transparent" BorderThickness="0" Foreground="White">
                        <ListBox.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel ItemWidth="230" ItemHeight="270" IsItemsHost="True"/>
                            </ItemsPanelTemplate>
                        </ListBox.ItemsPanel>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Margin="5" Background="#2D2D30" CornerRadius="8" Width="220" Height="260" ToolTip="Double-Click to Play">
                                    <Border.InputBindings>
                                        <MouseBinding Gesture="LeftDoubleClick" Command="{Binding DataContext.PlayCommand, RelativeSource={RelativeSource AncestorType=Window}}" CommandParameter="{Binding FilePath}"/>
                                    </Border.InputBindings>
                                    <Border.ContextMenu>
                                        <ContextMenu>
                                            <MenuItem Header="▶ Play Video" Click="MenuItem_Play_Click" Tag="{Binding FilePath}"/>
                                            <MenuItem Header="📂 Open File Location" Click="MenuItem_OpenFolder_Click" Tag="{Binding FilePath}"/>
                                            <MenuItem Header="🏷 Add Tag..." Click="MenuItem_AddTag_Click" Tag="{Binding FilePath}"/>
                                        </ContextMenu>
                                    </Border.ContextMenu>
                                    <Border.Effect>
                                        <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.3"/>
                                    </Border.Effect>
                                    <StackPanel>
                                        <!-- Card Header Image -->
                                        <Border Height="130" Background="#3E3E42" CornerRadius="8,8,0,0">
                                            <Grid>
                                                <TextBlock Text="🎬" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="40" Opacity="0.3"/>
                                                <!-- Transcript Overlay -->
                                                <Border Background="#CC000000" VerticalAlignment="Bottom" Height="40" Padding="5" Visibility="{Binding TranscriptSnippet, Converter={StaticResource BoolVis}}">
                                                    <TextBlock Text="{Binding TranscriptSnippet}" Foreground="#DDD" FontSize="9" TextWrapping="Wrap" TextTrimming="CharacterEllipsis"/>
                                                </Border>
                                            </Grid>
                                        </Border>
                                        
                                        <StackPanel Margin="12">
                                            <TextBlock Text="{Binding FileName}" Foreground="White" FontWeight="SemiBold" TextTrimming="CharacterEllipsis" ToolTip="{Binding FileName}"/>
                                            <TextBlock Text="{Binding FileSizeBytes, Converter={StaticResource FileSizeConverter}}" Foreground="#888" FontSize="11" Margin="0,2,0,5"/>
                                            
                                            <!-- Tags/Badges -->
                                            <WrapPanel Margin="0,5,0,0">
                                                <Border Background="#33FF5555" CornerRadius="4" Padding="4,2" Visibility="{Binding IsAnalyzed, Converter={StaticResource BoolVis}, ConverterParameter=Inverse}">
                                                    <TextBlock Text="CONTENT NOT SCANNED" Foreground="#FF5555" FontSize="9" FontWeight="Bold"/>
                                                </Border>
                                                <Border Background="#3355FF55" CornerRadius="4" Padding="4,2" Margin="5,0,0,0" ToolTip="AI Interest Score">
                                                    <TextBlock Text="{Binding ContentScore, StringFormat='SCORE: {0:P0}'}" Foreground="#55FF55" FontSize="9" FontWeight="Bold"/>
                                                </Border>
                                                <Border Background="#335555FF" CornerRadius="4" Padding="4,2" Margin="5,0,0,0" ToolTip="Timestamp" Visibility="{Binding ExtractedTimestamp, Converter={StaticResource BoolVis}}">
                                                   <TextBlock Text="DATED" Foreground="#AAAAFF" FontSize="9" FontWeight="Bold"/>
                                                </Border>
                                                
                                                <!-- User Tags -->
                                                <ItemsControl ItemsSource="{Binding Tags}">
                                                    <ItemsControl.ItemsPanel>
                                                        <ItemsPanelTemplate>
                                                            <WrapPanel/>
                                                        </ItemsPanelTemplate>
                                                    </ItemsControl.ItemsPanel>
                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate>
                                                            <Border Background="#33AAAAAA" CornerRadius="3" Padding="3,1" Margin="2">
                                                                <TextBlock Text="{Binding}" Foreground="White" FontSize="9"/>
                                                            </Border>
                                                        </DataTemplate>
                                                    </ItemsControl.ItemTemplate>
                                                </ItemsControl>
                                            </WrapPanel>
                                        </StackPanel>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </ScrollViewer>
            </Grid>

            <!-- Status Bar -->
            <Border Grid.Row="2" Background="#007ACC" Padding="10,0">
                <TextBlock Name="TxtStatus" Text="Ready" Foreground="White" VerticalAlignment="Center" FontSize="12"/>
            </Border>
        </Grid>
    </Grid>
</Window>
