<Window x:Class="MyFinder.VoiceAnalysisWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Voice Analysis" Height="600" Width="900" Background="#1E1E1E">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#333"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="4">
                             <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Speaker Clusters List -->
        <Border BorderBrush="#333" BorderThickness="0,0,1,0" Background="#252526">
            <DockPanel>
                <TextBlock Text="DETECTED SPEAKERS" DockPanel.Dock="Top" Foreground="#888" FontWeight="Bold" Margin="10,15,0,10"/>
                <ListBox x:Name="LstClusters" Background="Transparent" BorderThickness="0" Foreground="White" SelectionChanged="LstClusters_SelectionChanged">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Margin="5">
                                <TextBlock Text="{Binding Id}" FontWeight="Bold" FontSize="14"/>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Total Duration: " Foreground="#AAA" FontSize="11"/>
                                    <TextBlock Text="{Binding TotalDuration, StringFormat=mm\\:ss}" Foreground="#AAA" FontSize="11"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding Segments.Count}" Foreground="#AAA" FontSize="11"/>
                                    <TextBlock Text=" Segments" Foreground="#AAA" FontSize="11"/>
                                </StackPanel>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                    <ListBox.ItemContainerStyle>
                         <Style TargetType="ListBoxItem">
                             <Setter Property="Padding" Value="5"/>
                             <Setter Property="Template">
                                 <Setter.Value>
                                     <ControlTemplate TargetType="ListBoxItem">
                                         <Border Background="{TemplateBinding Background}" CornerRadius="4" Padding="5">
                                             <ContentPresenter/>
                                         </Border>
                                     </ControlTemplate>
                                 </Setter.Value>
                             </Setter>
                             <Style.Triggers>
                                 <Trigger Property="IsSelected" Value="True">
                                     <Setter Property="Background" Value="#007ACC"/>
                                 </Trigger>
                             </Style.Triggers>
                         </Style>
                    </ListBox.ItemContainerStyle>
                </ListBox>
            </DockPanel>
        </Border>

        <!-- Right Side: Details & Player -->
        <Grid Grid.Column="1" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/> <!-- Header / Rename -->
                <RowDefinition Height="Auto"/> <!-- Player -->
                <RowDefinition Height="*"/>    <!-- Segments -->
            </Grid.RowDefinitions>

            <!-- Rename -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
                <TextBlock Text="Rename Speaker:" VerticalAlignment="Center" Foreground="#AAA" Margin="0,0,10,0"/>
                <TextBox x:Name="TxtSpeakerName" Width="200" Height="30" VerticalContentAlignment="Center" Background="#333" Foreground="White" BorderThickness="0" Padding="5,0"/>
                <Button Content="Update" Margin="10,0,0,0" Click="BtnRename_Click"/>
            </StackPanel>
            
            <!-- Player -->
            <Border Grid.Row="1" Height="250" Background="Black" CornerRadius="8" Margin="0,0,0,20">
                <Grid>
                    <MediaElement x:Name="MediaPlayer" LoadedBehavior="Manual" ScrubbingEnabled="True"/>
                    <TextBlock x:Name="TxtStatus" Text="Select a segment to play" Foreground="#888" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Grid>
            </Border>

            <!-- Segments List -->
            <DockPanel Grid.Row="2">
                <TextBlock Text="AUDIO SEGMENTS" DockPanel.Dock="Top" Foreground="#888" FontWeight="Bold" Margin="0,0,0,10"/>
                <ListBox x:Name="LstSegments" Background="Transparent" BorderThickness="0" Foreground="White">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="0,2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="80"/>
                                    <ColumnDefinition Width="80"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="60"/>
                                </Grid.ColumnDefinitions>
                                
                                <TextBlock Text="{Binding Start, StringFormat='hh\\:mm\\:ss'}" Foreground="#AAA" VerticalAlignment="Center"/>
                                <TextBlock Grid.Column="1" Text="{Binding End, StringFormat='hh\\:mm\\:ss'}" Foreground="#AAA" VerticalAlignment="Center"/>
                                <TextBlock Grid.Column="2" Text="{Binding Text}" Foreground="White" TextTrimming="CharacterEllipsis" Margin="10,0"/>
                                
                                <Button Grid.Column="3" Content="â–¶ Play" Click="BtnPlaySegment_Click" Tag="{Binding}"/>
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </DockPanel>
        </Grid>
        
        <!-- Loading Overlay -->
        <Grid x:Name="LoadingOverlay" Background="#AA000000" Visibility="Collapsed">
             <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                 <TextBlock Text="SCANNING &amp; CLUSTERING..." Foreground="White" FontSize="20" HorizontalAlignment="Center"/>
                 <TextBlock Text="This may take a minute for large files." Foreground="#AAA" Margin="0,10,0,0" HorizontalAlignment="Center"/>
             </StackPanel>
        </Grid>
    </Grid>
</Window>
